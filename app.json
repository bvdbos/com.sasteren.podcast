{
    "id": "com.sasteren.podcast",
    "sdk": 2,
    "name": {
        "en": "Podcasts",
		"nl": "Podcasts"
    },
    "description": {
        "en": "plays podcasts with Homey Music",
		"nl": "speel podcasts af met Homey Music"
    },
    "category": "internet",
    "version": "0.3.0",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Bas van den Bosch",
        "email": "bvdbos@gmail.com"
    },
    "media": [ "getPlaylists", "getPlaylist", "play", "search"],
    "images": {
        "large": "/assets/images/large.jpg",
        "small": "/assets/images/small.jpg"
    },
	"flow": {
		"triggers": [
			{
				"id": "new_podcast_item",
				"title": {
					"en": "There's a new Podcast",
					"nl": "Er is een nieuwe Podcast"
				},
				"tokens": [
					{
						"name": "item",
						"type": "string",
						"title": {
							"en": "latest podcast",
							"nl": "nieuwste podcast"
						}
					},
					{
						"name": "pctitle",
						"type": "string",
						"title": {
							"en": "podcast-title",
							"nl": "podcast-naam"
						}
					},
					{
						"name": "tijd",
						"type": "string",
						"title": {
							"en": "time",
							"nl": "tijd"
						}
					}
				]
			}
        ]
    }

}