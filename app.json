{
    "id": "com.sasteren.podcast",
    "sdk": 2,
    "name": {
        "en": "Podcasts",
		"nl": "Podcasts",
		"de": "Podcasts"
    },
    "description": {
        "en": "plays podcasts",
		"nl": "speel podcasts",
		"de": "spielt Podcasts"
    },
    "category": "internet",
    "version": "1.2.1",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Bas van den Bosch",
        "email": "bvdbos@gmail.com"
    },
    "media": [ "getPlaylists", "getPlaylist", "play", "search"],
    "images": {
        "large": "/assets/images/large.jpg",
        "small": "/assets/images/small.jpg"
    },
	    "bugs": {
        "url": "https://github.com/bvdbos/com.sasteren.podcast/issues"
    },
    "homeyCommunityTopicId": 10049,
	"flow": {
		"triggers": [
			{
				"id": "new_podcast_item",
				"title": {
					"en": "There's a new Podcast",
					"nl": "Er is een nieuwe Podcast",
					"de": "Es gibt einen neuen Podcast"
				},
				"tokens": [
					{
						"name": "item",
						"type": "string",
						"example": "https://content1b.omroep.nl/urishieldv2/l27m11508c5b37b099ff005a2d3d09000000.4fdbeaaa057d1b26b557ee8e3c9cb699/portal/radiomanager/rm3-radio1/audiofragments/65/64300-Britse_undercoverpraktijken_onder_vuur.mp3",
						"title": {
							"en": "latest podcast",
							"nl": "nieuwste podcast",
              "de": "neuester Podcast"
						}
					},
					{
						"name": "pctitle",
						"type": "string",
						"example": "Argos",
						"title": {
							"en": "podcast-title",
							"nl": "podcast-naam",
              "de": "Podcast-Titel"
						}
					},
					{
						"name": "tijd",
						"type": "string",
						"example": "2682017",
						"title": {
							"en": "time",
							"nl": "tijd",
              "de": "Zeit"
						}
					}
				]
			}
        ]
    }

}
